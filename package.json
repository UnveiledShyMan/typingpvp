{
  "name": "typing-battle",
  "version": "1.0.0",
  "description": "Site de test de dactylo avec batailles 1v1",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "node start.js",
    "dev:server": "cd server && nodemon index.js",
    "dev:client": "cd client && npm run dev",
    "start": "node start.js",
    "start:server": "cd server && node index.js",
    "start:client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "build:client": "cd client && npm install && npm run build",
    "migrate": "node server/db/migrate.js",
    "migrate:oauth": "node server/db/migrate.js add_oauth",
    "setup:db": "node server/db/setup-database.js",
    "setup": "node setup-plesk.js",
    "setup:plesk": "node setup-plesk.js"
  },
  "keywords": ["typing", "test", "battle", "1v1"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
